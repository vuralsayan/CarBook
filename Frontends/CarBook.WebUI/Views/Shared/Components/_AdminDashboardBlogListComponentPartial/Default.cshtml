@using System.Globalization
@model List<ResultAllBlogWithAuthorsDto>
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Blog Listesi</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Yazarlarımızın yazdıkları blogları buradan görüntüleyebilirsiniz.
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <thead>
                        <tr>
                            <th class="border-top-0">Blog Başlığı</th>
                            <th class="border-top-0">Yazar</th>
                            <th class="border-top-0">Blogu Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5>
                                    <span class="text-muted font-size-12">@item.CreatedDate.ToString("dd MMM yy", new CultureInfo("tr-TR"))</span>
                                </td>
                                <td>
                                    <h5 class="text-muted font-size-15 mb-1 font-weight-normal">@item.AuthorName</h5>
                                </td>
                                <td>
                                    <a  href="/Blog/BlogDetail/@item.BlogID" target="_blank" class="btn btn-dark btn-sm waves-effect waves-light">Blogu Aç</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>