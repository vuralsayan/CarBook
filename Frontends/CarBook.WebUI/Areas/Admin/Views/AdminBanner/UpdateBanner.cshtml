@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Banner Güncelleme İşlemleri</h4>
                <p class="card-subtitle mb-4">Banner güncelleme işlemlerinizi bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="BannerID" />
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" placeholder="Başlık Giriniz" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" class="form-control" placeholder="Açıklama Giriniz" asp-for="Description">
                    </div>
                    <div class="form-group">
                        <label>Video Açıklaması</label>
                        <input type="text" class="form-control" placeholder="Video Açıklaması Giriniz" asp-for="VideoDescription">
                    </div>
                    <div class="form-group">
                        <label>Video Url</label>
                        <input type="text" class="form-control" placeholder="Video Url Giriniz" asp-for="VideoUrl">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Güncelle</button>
                    <a href="/Admin/AdminBanner/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>


