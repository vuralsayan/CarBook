@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Referans Girişi</h4>
                <p class="card-subtitle mb-4">Yeni referans girişlerini bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" placeholder="Ad Soyad Giriniz" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Ünvan</label>
                        <input type="text" class="form-control" placeholder="Ünvan Giriniz" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Resim Uzantısı</label>
                        <input type="text" class="form-control" placeholder="Resim Uzantısı Giriniz" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Referans Yorumu</label>
                        <textarea class="form-control" rows="5" placeholder="Referans Yorumunu Giriniz" asp-for="Comment"></textarea>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Yeni Referans Kaydet</button>
                    <a href="/Admin/AdminTestimonial/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
