@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Güncelleme İşlemleri</h4>
                <p class="card-subtitle mb-4">Kategori güncelleme işlemlerini bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <input  type="hidden" asp-for="CategoryID"/>
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" placeholder="Kategori Adı Giriniz" asp-for="Name">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
                    <a href="/Admin/AdminCategory/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

