@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Özellik Girişi</h4>
                <p class="card-subtitle mb-4">Yeni özellik girişlerini bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label>Araç Özelliği</label>
                        <input type="text" class="form-control" placeholder="Özellik Giriniz" asp-for="Name">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
                    <a href="/Admin/AdminFeature/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

