@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ödeme Türü Güncelleme İşlemleri</h4>
                <p class="card-subtitle mb-4">Ödeme türünün güncelleme işlemlerini bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <input  type="hidden" asp-for="PricingID"/>
                    <div class="form-group">
                        <label>Ödeme Türü Adı</label>
                        <input type="text" class="form-control" placeholder="Ödeme Türünü Giriniz" asp-for="Name">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türünü Güncelle</button>
                    <a href="/Admin/AdminPricing/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
