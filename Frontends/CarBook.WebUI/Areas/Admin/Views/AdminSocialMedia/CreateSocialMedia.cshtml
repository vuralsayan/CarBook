@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Sosyal Medya Girişi</h4>
                <p class="card-subtitle mb-4">Yeni sosyal medya bilgilerinizi buradan girebilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label>Sosyal Medya Adı</label>
                        <input type="text" class="form-control" placeholder="Sosyal Medya Adı Giriniz" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Hesap Url</label>
                        <input type="text" class="form-control" placeholder="Hesap Url Giriniz" asp-for="Url">
                    </div>
                    <div class="form-group">
                        <label>İkon</label>
                        <input type="text" class="form-control" placeholder="İkon Giriniz" asp-for="Icon">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Yeni Sosyal Medya Bilgisini Kaydet</button>
                    <a href="/Admin/AdminSocialMedia/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
