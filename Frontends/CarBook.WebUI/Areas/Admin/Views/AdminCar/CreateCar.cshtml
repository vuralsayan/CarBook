@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Araç Girişi</h4>
                <p class="card-subtitle mb-4">Yeni araç girişlerini bu sayfadan gerçekleştirebilirsiniz. <span class="text-danger">Lütfen araç bilgilerini eksiksiz doldurunuz!</span></p>

                <form method="post">
                    <div class="form-group">
                        <label>Marka</label>
                        <select class="form-control" data-toggle="select2" asp-for="BrandID" asp-items="@ViewBag.Brands">
                            <option disabled selected>Lütfen Araç Markasını Seçiniz</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Model</label>
                        <input type="text" class="form-control" placeholder="Model Giriniz" asp-for="Model">
                    </div>
                    <div class="form-group">
                        <label>Kapak Fotoğrafı</label>
                        <input type="text" class="form-control" placeholder="Araç Kapak Fotoğrafını Giriniz" asp-for="CoverImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Büyük Fotoğraf</label>
                        <input type="text" class="form-control" placeholder="Araç Büyük Fotoğrafını Giriniz" asp-for="BigImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Km</label>
                        <input type="number" class="form-control" placeholder="Araç Kilometre Bilgisini Giriniz" asp-for="Km">
                    </div>
                    <div class="form-group">
                        <label>Vites Türü</label>
                        <input type="text" class="form-control" placeholder="Araç Vites Türünü Giriniz" asp-for="Transmission">
                    </div>
                    <div class="form-group">
                        <label>Koltuk Sayısı</label>
                        <input type="number" class="form-control" placeholder="Araç Koltuk Sayısını Giriniz" asp-for="Seat">
                    </div>
                    <div class="form-group">
                        <label>Bagaj Sayısı</label>
                        <input type="number" class="form-control" placeholder="Araç Bagaj Sayısını Giriniz" asp-for="Luggage">
                    </div>
                    <div class="form-group">
                        <label>Yakıt Türü</label>
                        <input type="text" class="form-control" placeholder="Araç Yakıt Türünü Giriniz" asp-for="Fuel">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                    <a href="/Admin/AdminCar/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>

            </div>
        </div>
    </div>
</div>
