@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim ve Footer Alanı Adres Güncelleme Sayfası</h4>
                <p class="card-subtitle mb-4">İletişim ve footer alanı adres bilgilerinizi buradan güncelleyebilirsiniz. <span class="text-danger">Tema bütünlüğü için lütfen bütün alanları eksiksiz doldurunuz.</span></p>
                <form method="post">
                    <input type="hidden" asp-for="FooterAddressID"/>
                    <div class="form-group">
                        <label>Adres</label>
                        <input type="text" class="form-control" placeholder="Adres Giriniz" asp-for="Address">
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        <input type="text" class="form-control" placeholder="Telefon Numarası Giriniz" asp-for="Phone">
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi</label>
                        <input type="email" class="form-control" placeholder="Mail Adresi Giriniz" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" placeholder="Açıklama Giriniz" rows="4" asp-for="Description"></textarea>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisini Güncelle</button>
                    <a href="/Admin/AdminFooterAddress/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
