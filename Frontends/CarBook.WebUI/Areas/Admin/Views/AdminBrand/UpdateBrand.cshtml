@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Marka Güncelleme İşlemleri</h4>
                <p class="card-subtitle mb-4">Marka güncelleme işlemlerinizi bu sayfadan gerçekleştirebilirsiniz.</span></p>

                <form method="post">
                    <input type="hidden" asp-for="BrandID" />
                    <div class="form-group">
                        <label>Marka</label>
                        <input type="text" class="form-control" placeholder="Marka Giriniz" asp-for="Name">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Güncelle</button>
                    <a href="/Admin/AdminBrand/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>

            </div>
        </div>
    </div>
</div>

