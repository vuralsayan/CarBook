@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Marka Girişi</h4>
                <p class="card-subtitle mb-4">Yeni marka girişlerini bu sayfadan gerçekleştirebilirsiniz.</p>

                <form method="post">
                    <div class="form-group">
                        <label>Marka Adı</label>
                        <input type="text" class="form-control" placeholder="Marka Adı Giriniz" asp-for="Name">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                    <a href="/Admin/AdminBrand/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>

            </div>
        </div>
    </div>
</div>

