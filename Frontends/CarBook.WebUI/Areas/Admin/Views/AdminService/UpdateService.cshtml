@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Bilgisi Güncelleme İşlemleri</h4>
                <p class="card-subtitle mb-4">Hizmet bilgilerinizi bu sayfadan güncelleyebilirsiniz.</p>
                <form method="post">
                    <input  type="hidden" asp-for="ServiceID"/>
                    <div class="form-group">
                        <label>Hizmet Adı</label>
                        <input type="text" class="form-control" placeholder="Hizmet Adı Giriniz" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>İkon</label>
                        <input type="text" class="form-control" placeholder="İkon Url Giriniz" asp-for="IconUrl">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" rows="5" placeholder="Açıklama Giriniz" asp-for="Description"></textarea>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Bilgisini Güncelle</button>
                    <a href="/Admin/AdminService/Index/" class="btn btn-danger waves-effect waves-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
